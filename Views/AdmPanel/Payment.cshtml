@model Randevu.Models.Appointment
@{
    ViewData["Title"] = "Ödeme Sayfası";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.SiteTitle - Ödeme Sayfası</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-mask-plugin@1.14.16/dist/jquery.mask.min.js"></script>
    <style>
        .payment-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
            background-color: #f9f9f9;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .payment-header {
            text-align: center;
            margin-bottom: 20px;
        }

        .payment-details {
            margin-bottom: 20px;
        }

        .card-details input {
            margin-bottom: 10px;
        }

        .btn-primary {
            width: 100%;
        }

        .card-logo {
            height: 30px;
            margin-left: 10px;
            display: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="payment-container">
            <div class="payment-header">
                <h1>Ödeme Sayfası</h1>
            </div>
            <div class="payment-details">
                <p><strong>Randevu Tarihi:</strong> @Model.Date.ToString("dd MMMM yyyy")</p>
                <p><strong>Randevu Saati:</strong> @Model.Time.ToString(@"hh\:mm")</p>
                <p><strong>Ödeme Tutarı:</strong> @Model.Price TL</p>
            </div>
            <form id="paymentForm" method="post" action="/AdmPanel/ProcessPayment">
                <input type="hidden" name="appointmentId" value="@Model.AppointmentID" />
                <div class="card-details">
                    <div class="form-group">
                        <label for="cardNumber">Kart Numarası</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="cardNumber" name="cardNumber" placeholder="Kart Numarası" required pattern="\d{16}">
                            <div class="input-group-append">
                                <img src="https://img.icons8.com/color/48/000000/visa.png" id="visa" class="card-logo" alt="Visa">
                                <img src="https://img.icons8.com/color/48/000000/mastercard.png" id="mastercard" class="card-logo" alt="MasterCard">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="cardName">Kart Üzerindeki İsim</label>
                        <input type="text" class="form-control" id="cardName" name="cardName" placeholder="Kart Üzerindeki İsim" required>
                    </div>
                    <div class="form-group row">
                        <div class="col">
                            <label for="expiryDate">Son Kullanma Tarihi</label>
                            <input type="text" class="form-control" id="expiryDate" name="expiryDate" placeholder="AA/YY" required pattern="\d{2}/\d{2}">
                        </div>
                        <div class="col">
                            <label for="cvv">CVV</label>
                            <input type="text" class="form-control" id="cvv" name="cvv" placeholder="CVV" required pattern="\d{3}">
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Ödemeyi Tamamla</button>
            </form>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#cardNumber').mask('9999 9999 9999 9999');

            $('#expiryDate').mask('99/99');
            $('#cvv').mask('999');

            $('#paymentForm').on('submit', function (event) {
                var cardNumber = $('#cardNumber').val().replace(/\s/g, '');
                var lastFourDigits = cardNumber.substr(cardNumber.length - 4);
                $('#cardNumber').val('**** **** **** ' + lastFourDigits);
            });

            $('#cardNumber').on('input', function () {
                var cardNumber = $(this).val();
                if (cardNumber.startsWith('4')) {
                    $('#visa').show();
                    $('#mastercard').hide();
                } else if (cardNumber.startsWith('5')) {
                    $('#visa').hide();
                    $('#mastercard').show();
                } else {
                    $('#visa').hide();
                    $('#mastercard').hide();
                }
            });
        });
    </script>
</body>
</html>
