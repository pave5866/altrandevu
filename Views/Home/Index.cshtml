@{
    ViewData["Title"] = "Anasayfa";
    Layout = null;
}

<!DOCTYPE html>
<html class="wide wow-animation" lang="en">
  <head>
    <!-- Site Title-->
    <title>@ViewBag.SiteTitle - Anasayfa</title>
    <link rel="shortcut icon" href="~/img/logo.png" />
    <meta name="format-detection" content="telephone=no">
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta charset="utf-8">
   
    <!-- Stylesheets-->
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Roboto+Mono:300,300italic,400,700%7CArvo:400,700">
    <link rel="stylesheet" href="~/index/css/style.css">

  </head>
  <body>
    <div class="page">
      <header class="page-header">
        <div class="rd-navbar-wrap">
          <nav class="rd-navbar" data-layout="rd-navbar-fixed" data-sm-layout="rd-navbar-fixed" data-sm-device-layout="rd-navbar-fixed" data-md-layout="rd-navbar-fullwidth" data-md-device-layout="rd-navbar-fixed" data-lg-device-layout="rd-navbar-fixed" data-lg-layout="rd-navbar-fullwidth" data-stick-up-clone="true" data-md-stick-up-offset="140px" data-lg-stick-up-offset="140px">
            <div class="rd-navbar-inner">
              <div class="rd-navbar-panel">
                <button class="rd-navbar-toggle" data-rd-navbar-toggle=".rd-navbar-nav-wrap"><span></span></button>
                            <div class="rd-navbar-brand">
                                <a class="brand-name" href="@Url.Action("Index", "Home")">
                                    <div class="brand-mobile">
                                        <img src="~/panel/img/logo.png" alt="" width="200" height="36" />
                    </div>
                                    <div class="brand-desktop">
                                        <img src="~/panel/img/logo.png" alt="" width="125" height="125" />
                    </div></a></div>
              </div>
              <div class="rd-navbar-nav-wrap">
                <div class="rd-navbar-nav-inner">
                  <ul class="rd-navbar-nav">
                                    <li class="active">
                                        <a href="@Url.Action("Index", "Home")">Anasayfa</a>
                    </li>
                      <li>
                                        <a href="@Url.Action("About", "Home")">Hakkımızda ▼</a>
                                        <ul class="rd-navbar-dropdown">
                                            <li>
                                                <a href="@Url.Action("Team", "Home")">Çalışanlarımız</a>
                                            </li>
                                            <li>
                                                <a href="@Url.Action("Privacy", "Home")">Yasal</a>
                                            </li>
                                            <li>
                                                <a href="@Url.Action("Services", "Home")">Hizmetlerimiz</a>
                                            </li>
                                        </ul>
                    </li>
                      <li>
                      <a href="@Url.Action("Randevu", "Home")">Randevu Al</a>
                      </li>
                    <li>
                    <a href="@Url.Action("Blog", "Home")">Blog</a>
                    </li>
                    <li>
                    <a href="@Url.Action("Contact", "Home")">İletişim</a>
                    </li>
                                    @if (ViewBag.UserName != null)
                                    {
                                        <li ><a href="@Url.Action("Logout", "AdmPanel")">Çıkış Yap</a></li>
                                        <li><a href="@Url.Action("Index", "AdmPanel")">@ViewBag.UserName</a></li>
                                    }
                                    else
                                    {
                                        <li ><a href="@Url.Action("Login", "AdmPanel")">Giriş Yap</a></li>
                                    }
                  </ul>
                </div>
              </div>
            </div>
          </nav>
        </div>
      </header>
        <section class="jumbotron-custom jumbotron-custom-3 bg-white bg-image bg-image-custom bg-image-center" style="background-image: url(/index/images/homebg.png);">
        <div class="jumbotron-custom-content text-center">
          <div class="shell">
            <div class="range range-sm-center">
              <div class="cell-sm-9 cell-md-8 cell-lg-7">
                            <h1>@ViewBag.SiteTitle</h1>
              </div>
            </div>
          </div>
        </div>
      </section>
       @if (ViewBag.RecommendedIndividuals != null)
       {
      <section class="section-xl bg-periglacial-blue text-center">
        <div class="shell">
          <div class="range range-sm-center range-75">
            <div class="cell-xs-12">
              <h2>Önerenler</h2>
            </div>
            <div class="cell-xs-12">
              <!-- Owl Carousel-->
              <div class="owl-carousel owl-carousel-modern owl-style-1" data-items="1" data-stage-padding="0" data-loop="true" data-margin="20" data-xs-margin="30" data-mouse-drag="false" data-nav="true" data-dots="true" data-animation-in="fadeIn" data-animation-out="fadeOut">

                                @foreach (var recommendation in ViewBag.RecommendedIndividuals)
                                {
                                    <div class="item">
                                        <blockquote class="quote-centered">
                                            <div class="quote-centered-avatar">
                                                <img src="@Url.Content("~/img/tav/" + recommendation.ImagePath)" alt="" width="100" height="100" />
                                            </div>
                                            <cite>@recommendation.Name</cite>
                                            <p class="quote-centered-text">
                                                <q>@recommendation.Comment</q>
                                            </p>
                                        </blockquote>
                                    </div>
                                }
                            


              </div>
            </div>
          </div>
        </div>
      </section>
        }
        @if (ViewBag.RandomStaff != null)
                    {
        <section class="section-xl bg-gray-dark bg-image text-center" style="background-image: url(/index/images/bg-image-1.png);">
        <div class="shell">
          <div class="range range-50">
            <div class="cell-xs-12">
              <h2>Çalışanlarımız</h2>
              <div class="p text-width-medium">
              </div>
            </div>
            <div class="cell-xs-12">
              <div class="range range-30">
                            @foreach (var staff in ViewBag.RandomStaff)
                            {
                                <div class="cell-sm-6 cell-md-4 height-fill">
                                    <div class="thumbnail-card">
                                        <img class="thumbnail-card-image" src="/img/staff/@(staff.StaffID).png" alt="" width="370" height="310" />
                                        <div class="thumbnail-card-body">
                                            <p class="thumbnail-card-header">@staff.FirstName @staff.LastName</p>
                                        </div>
                                    </div>
                                </div>
                            }


              </div>
            </div>
                        <div class="cell-xs-12"><a class="btn btn-sm btn-style-1 btn-primary" href="@Url.Action("Team", "Home")">Bütün Ekibi İncele</a></div>
          </div>
        </div>
      </section>
        }
        @if (ViewBag.RecentPosts != null && ViewBag.RecentPosts.Count >= 4)
                    {
      <section class="section-lg bg-periglacial-blue text-center">
        <div class="shell">
          <div class="range range-sm-center range-75">
            <div class="cell-xs-12">
              <h2>Son Blog Paylaşımları</h2>
              <div class="p text-width-medium">
              </div>
            </div>
            <div class="cell-xs-12">
              <div class="slick-slider carousel-center-mode" data-arrows="false" data-loop="true" data-dots="true" data-swipe="true" data-autoplay="false" data-items="1" data-lg-items="3" data-center-mode="true" data-center-padding="0.0">
                                @foreach (var post in ViewBag.RecentPosts)
                                {
                                    <div class="item">
                                        <div class="slick-slide-inner">
                                            <article class="post-classic">
                                                <img class="post-classic-image" src="/index/images/blog/@(post.BlogPostID).png" alt="" width="770" height="330" />
                                                <div class="post-classic-body">
                                                    <p class="post-classic-title"><a href="@Url.Action("BlogDetail", "Home", new { id = post.BlogPostID })">@post.Title</a></p>
                                                    <div class="post-classic-text">
                                                        <p>@post.Content.Substring(0, Math.Min(post.Content.Length, 100))</p>
                                                    </div>
                                                    <div class="post-classic-footer">
                                                        <div class="post-classic-footer-left"><a class="btn btn-xs btn-primary btn-circle" href="@Url.Action("BlogDetail", "Home", new { id = post.BlogPostID })">Detay</a></div>
                                                        <div class="post-classic-footer-right">
                                                            <ul class="post-classic-meta">
                                                                <li><span class="icon icon-xxs icon-primary fa fa-calendar-plus-o"></span>
                                                                    <time datetime="2017-08-26">@post.PublishDate.ToString("dd MMM yyyy")</time>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            </article>
                                        </div>
                                    </div>
                                }
              </div>
            </div>
          </div>
        </div>
      </section>
        }
      <footer class="page-footer page-footer-variant-3">
        <div class="shell">
          <div class="range range-50">
            <div class="cell-sm-6 cell-md-4">
              <h3>Sayfalar</h3>
              <div class="divider divider-conch"></div>
                        <ul class="footer-navigation row footer-navigation-vertical" style="max-width: 390px;">
                            <li class="col-xs-6"><a href="@Url.Action("Index", "Home")">Anasayfa</a></li>
                            <li class="col-xs-6"><a href="@Url.Action("Blog", "Home")">Blog</a></li>
                            <li class="col-xs-6"><a href="@Url.Action("About", "Home")">Hakkımızda</a></li>
                            <li class="col-xs-6"><a href="@Url.Action("Contact", "Home")">İletişim</a></li>
                        </ul>
            </div>
                    @if (ViewBag.ContactInfo != null)
                    {
            <div class="cell-sm-6 cell-md-3">
              <h3>Bizi Takip Edin</h3>
              <div class="divider divider-conch"></div>
                        <ul class="inline-list inline-list-xs">

                                @if (!string.IsNullOrEmpty(ViewBag.ContactInfo.Facebook))
                                {
                                    <li>
                                        <a class="icon icon-xs-outline icon-wild-sand-filled icon-circle fa-facebook" href="@ViewBag.ContactInfo.Facebook"></a>
                                    </li>
                                }
                                @if (!string.IsNullOrEmpty(ViewBag.ContactInfo.Twitter))
                                {
                                    <li>
                                        <a class="icon icon-xs-outline icon-wild-sand-filled icon-circle fa-twitter" href="@ViewBag.ContactInfo.Twitter"></a>
                                    </li>
                                }
                                @if (!string.IsNullOrEmpty(ViewBag.ContactInfo.Youtube))
                                {
                                    <li>
                                        <a class="icon icon-xs-outline icon-wild-sand-filled icon-circle fa-youtube" href="@ViewBag.ContactInfo.Youtube"></a>
                                    </li>
                                }
                                @if (!string.IsNullOrEmpty(ViewBag.ContactInfo.Instagram))
                                {
                                    <li>
                                        <a class="icon icon-xs-outline icon-wild-sand-filled icon-circle fa-instagram" href="@ViewBag.ContactInfo.Instagram"></a>
                                    </li>
                                }
                            
                        </ul>


            </div>
                            }
          </div>
        </div>
      </footer>
    </div>
    <div class="snackbars" id="form-output-global"></div>
    <div class="pswp" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="pswp__bg"></div>
      <div class="pswp__scroll-wrap">
        <div class="pswp__container">
          <div class="pswp__item"></div>
          <div class="pswp__item"></div>
          <div class="pswp__item"></div>
        </div>
        <div class="pswp__ui pswp__ui--hidden">
          <div class="pswp__top-bar">
            <div class="pswp__counter"></div>
            <button class="pswp__button pswp__button--close" title="Close (Esc)"></button>
            <button class="pswp__button pswp__button--share" title="Share"></button>
            <button class="pswp__button pswp__button--fs" title="Toggle fullscreen"></button>
            <button class="pswp__button pswp__button--zoom" title="Zoom in/out"></button>
            <div class="pswp__preloader">
              <div class="pswp__preloader__icn">
                <div class="pswp__preloader__cut">
                  <div class="pswp__preloader__donut"></div>
                </div>
              </div>
            </div>
          </div>
          <div class="pswp__share-modal pswp__share-modal--hidden pswp__single-tap">
            <div class="pswp__share-tooltip"></div>
          </div>
          <button class="pswp__button pswp__button--arrow--left" title="Previous (arrow left)"></button>
          <button class="pswp__button pswp__button--arrow--right" title="Next (arrow right)"></button>
          <div class="pswp__caption">
            <div class="pswp__caption__cent"></div>
          </div>
        </div>
      </div>
    </div>
    <script src="~/index/js/core.min.js"></script>
    <script src="~/index/js/script.js"></script>
  </body>
</html>