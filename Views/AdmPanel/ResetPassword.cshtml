@{
    Layout = null; // Varsayılan layout'unuzu kullanabilirsiniz.
}

<h2>Şifre Sıfırlama</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

<form asp-action="ResetPassword" method="post">
    <input type="hidden" name="code" value="@ViewBag.Code" />  <!-- Updated from Request.Query to ViewBag -->
    <div class="form-group">
        <label for="newPassword">Yeni Şifre:</label>
        <input type="password" id="newPassword" name="newPassword" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Şifreyi Sıfırla</button>
</form>
